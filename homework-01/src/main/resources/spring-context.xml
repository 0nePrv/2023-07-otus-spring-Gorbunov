<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="questionDao" class="ru.otus.homework.dao.QuestionDaoImpl">
        <constructor-arg index="0" value="/questions.csv"/>
    </bean>

    <bean name="questionReaderService" class="ru.otus.homework.service.QuestionReaderServiceImpl">
        <constructor-arg index="0" ref="questionDao"/>
    </bean>

    <bean name="consoleWriterService" class="ru.otus.homework.service.ConsoleWriterServiceImpl">
        <constructor-arg index="0" ref="questionReaderService"/>
    </bean>
</beans>